command /nick <text>:
	permission: nick.use
	permission message: {@noperm}
	trigger:
		set the player's display name to "**%arg 1%"
		send "{@pf} &7&oNickname changed."
command /unnick:
	permission: nick.use
	permission message: {@noperm}
	trigger:
		set the player's display name "%player's uuid%"
		send "{@pf} &7&oDisabled your Nickname."
command /heal [<player>]:
	permission: {@mod}
	permission message: {@noperm}
	trigger:
		if arg 1 is not set:
			heal the player
			send "{@pf} &7&oYou have been healed."
		if arg 1 is set:
			heal arg 1
			send "{@pf} &7&oHealed %arg 1%."
command /smite [<player>]:
	permission: {@admin}
	permission message: {@noperm}
	trigger:
		if arg 1 is not set:
			send "{@pf} &7&oSmited!"
			strike lightning at the player
		if arg 1 is set:
			send "{@pf} &7&oSmited %arg 1%&7&o!"
			strike lightning at arg 1
