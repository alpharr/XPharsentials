# XPharsentials
variables:
	{godMode.%player%} = false

options:
	pf: &c&lXPhar &4»
	pf2: &c&lXPhar &4>>
	noperm: &c&lXPhar &c» &cYou don't have permission to execute this command.
	ver: &aVersion 1.2 PRE
# XPharsentials >> Made by Alphar
# XPharsentials >> 28/03/2020
command /xphar [<text>]:
	trigger:
		if arg 1 is not set:
			send "&c&lXPharsentials &4>> &aMade by Alphar, Version 1.2"
		if arg 1 is set:
			if arg 1 is not "help" or "when" or "flex" or "sniff" or "renegade" or "oof" or "release":
				send "{@pf} &7&oInvalid Syntax! (/xphar help)"
			if arg 1 is "help":
				send "{@pf} &7&o/xphar <help|release>"
			if arg 1 is "release":
				send "{@pf} &c&l&oXPhar &r&7&owas first released in 05/04/2020 (dd/mm/yy)."
			if arg 1 is "when":
				send "{@pf} &7&oLooks like you found the Secret huh."
				send "{@pf} &7&oWell, the next release is coming soon enough."
				send "{@pf} &7&oJk, Its gonna prob release in dd/mm/yy. (UNDEFINIED)"
			if arg 1 is "flex":
				broadcast "&9%player% &bjust FLEXED!"
			if arg 1 is "sniff":
				broadcast "&5%player% &dsniffed. uwu"
			if arg 1 is "renegade":
				broadcast "&4%player% &cis doing the RENEGADE!"
				broadcast "&cSuch a great dancer!"
			if arg 1 is "oof":
				broadcast "&e%player% &ejust OOF'ed!"
command /gmc [<player>]:
	permission: gmc.use
	permission message: {@noperm}
	description: Set your gamemode to creative.
	trigger:
		if arg 1 is not set:
			set the player's gamemode to creative
			send "{@pf} &7&oGamemode set to Creative."
		if arg 1 is set:
			set arg 1's gamemode to creative
			send "{@pf} &7&oSet %arg 1% &7&ogamemode to Creative."
