# Help command
command /help [<text>]:
	trigger:
		if arg 1 is not set:
			send "&7&m-------------&r&8[&6&lBrok&8]&7&m-------------"
			send "&7/kits = Open the kits gui."
			send "&7/kit = Select a kit."
			send "&7/warp = Visit our warps."
			send "&7/help = Open this page."
			send "&7&m-------------&r&8[&ePage1&8]&7&m-------------"
		if arg 1 is set:
			if arg 1 is "2":
				send "&7&m-------------&r&8[&6&lBrok&8]&7&m-------------"
				send "&7/spawn = TP to spawn."
				send "&7/report = Report a player."
				send "&7&m-------------&r&8[&ePage2&8]&7&m-------------"
command /mutechat:
    permission: {@admin}
    permission message: {@noperm}
    trigger:
        if {Globalchat} is not set:
            set {Globalchat} to true
            broadcast "&cThe Chat was muted by &c&o%player%"
            stop trigger

        if {Globalchat} is set:
            clear {Globalchat}
            broadcast "&aThe Chat was unmuted by &a&o%player%"

on chat:
    if {Globalchat} is true:
        if player has permission "chat.mute.bypass":
            stop trigger
        else:
            cancel event
            send "&cChat is currently muted."
command /clearchat:
    aliases: /cc
    permission: {@srmod}	
    permission message: {@noperm}
    trigger:
        loop 300 times:
            broadcast ""
        wait 1 tick
        broadcast "&6The chat has been cleared by &e%player%"
        stop
