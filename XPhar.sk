# Moderation Commands, Not too good.
command /kick [<offline player>] [<text>]:
    permission: kick.use
    permission message: {@noperm}
    description: Kick someone from the Server.
    trigger:
        if arg 1 is not set:
            send "&cYou must select a player to kick."
        if arg 1 is set: 
            if arg 2 is not set:
                arg 1 is online
                send ""
                kick arg 1 due to "You've ben kicked from the server"
                stop 
                arg 1 is not online 
                send "&cThis player is not online."
                stop

            if arg 2 is set:
                send ""
                kick arg 1 due to "You've been kicked for %arg 2%" 
                stop 
command /ban [<offline player>] [<text>]:
    permission: ban.use
    permission message: {@noperm}
    description: Ban Someone from the Server.
    trigger:
        if arg 1 is not set:
            send "&cYou must select a player to ban."
        if arg 1 is set:
            if arg 2 is not set:
                send ""
                ban arg 1 due to "&cYou've been banned from the server"
                stop
                arg 1 is not online
                send "&cThis player is not online." 

            if arg 2 is set:
                send ""
                kick arg 1 due to "You've been banned for %arg 2%" 
                stop
