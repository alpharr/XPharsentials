# BrokLands Server Core 
# All Made by Alphar
#                                                  Variables
variables:
	{godMode.%player%} = false
#                                                  Options
options:
	pf: &6&lBrokLands &8|
	pf2: &6&lBrokLands &8|
	noperm: &6&lBrokLands &8| &cYou don't have permission to execute this command.
	ver: &aXPhar x BROKLANDS
	mod: mod
	admin: admin
	manager: manager
	build: build
	hbuild: hbuild
	srmod: srmod
	sradmin: sradmin
	trial: trial
	jrmod: jrmod
	jradmin: jradmin
#                                                  Start Of Code
command /brok [<text>]:
	trigger:
		if arg 1 is not set:
			send "&l"
			send "{@pf} &7Made by &aAlphar&7, Version {@ver}"
			send "&l"
		if arg 1 is set:
			if arg 1 is not "help" or "ver" or "version":
				send "{@pf} &7&oInvalid Syntax! (/brok help)"
			if arg 1 is "help":
				send "{@pf} &7&o/brok <help|version|ver>"
			if arg 1 is "ver":
				send "{@pf} &aVersion {@ver}"
			if arg 1 is "version":
				send "{@pf} &aVersion {@ver}"
command /gmc [<player>]:
	permission: {@hbuild}
	permission message: {@noperm}
	description: Set your gamemode to creative.
	trigger:
		if arg 1 is not set:
			set the player's gamemode to creative
			send "{@pf} &7&oGamemode set to Creative."
		if arg 1 is set:
			set arg 1's gamemode to creative
			send "{@pf} &7&oSet %arg 1% &7&ogamemode to Creative."
command /gms [<player>]:
	permission: {@hbuild}
	permission message: {@noperm}
	description: Set your gamemode to survival.
	trigger:
		if arg 1 is not set:
			set the player's gamemode to survival
			send "{@pf} &7Gamemode set to Survival."
		if arg 1 is set:
			set arg 1's gamemode to survival
			send "{@pf} &7&oSet %arg 1% &7&ogamemode to Survival."
command /tp <player>:
	permission: {@jrmod}
	permission message: {@noperm}
	description: Tp to someone.
	trigger:
		teleport player to arg 1
		send "{@pf} &7&oTP'ed to %arg 1%"
command /tphere <player>:
	permission: {@mod}
	permission message: {@noperm}
	description: Tp someone to you.
	trigger:
		teleport arg-1 to player
		send "{@pf} &7&oTP'ed %arg 1% &7&oto you."
		send "{@pf} &7&o%player% &7&oTP'ed you to him." to arg 1
on command "/pl" or "/plugins" or "/bukkit:pl" or "/bukkit:plugins":
	if player does not have permission "manager":
		send "{@noperm}"
command /fly [<player>]:
	permission: {@jrmod}
	permission message: {@noperm}
	trigger:
		if arg 1 is not set:
			if player's flight mode is false:
				set player's flight mode to true
				send "{@pf} &7&oYou can now fly."
				stop
			if player's flight mode is true:
				set player's flight mode to false
				send "{@pf} &7&oYou cannot fly now :("
				stop
		if arg 1 is set:
			if arg 1's flight mode is false:
				set arg 1's flight mode to true
				send "{@pf} &7&o%arg 1% &7&ocan now fly."
				send "{@pf} &7&oYou can now fly." to arg 1
				stop
			if arg 1's flight mode is true:
				set  arg 1's flight mode to false
				send "{@pf} &7&o%arg 1% &7&ocan't fly anymore."
				send "{@pf} &7&oYou can't fly now." to arg 1
				stop
